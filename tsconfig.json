{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "allowJs": false,
        "experimentalDecorators": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "typedocOptions": {
        "mode": "file",
        "out": "docs",
        "name": "typevine"
    }
}
